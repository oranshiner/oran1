<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.oran.MapProject.activities.MainActivity">

    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.oran.MapProject.fragments.Fragment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="4"
        tools:layout="@layout/fragment_fragment1" />

    <fragment
        android:id="@+id/map"
        android:name="com.example.oran.MapProject.fragments.MyMapFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_fragment2" />


</LinearLayout>
